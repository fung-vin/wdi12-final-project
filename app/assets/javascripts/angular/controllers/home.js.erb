app.controller('HomeCtrl', ['$scope', "$auth", "$location", '$http', function($scope, $auth, $location, $http){

  $scope.message = "Welcome to the Home Landing Page";

  $scope.test = function () {
    $http({
      url: '/api/tweets',
      method: 'GET'
    }).then(function(resp){
      console.log(resp);
    })
  };

  $scope.test2 = function () {
    $http({
      url: '/api/tweets',
      method: 'POST'
    }).then(function(resp){
      console.log(resp);
    })
  }

  $scope.logout = function () {
    $auth.signOut().then(function(resp) {
      // handle success response
      console.log(resp);
      // hide log in menu and show profile menu
