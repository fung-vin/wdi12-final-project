app.controller('HomeCtrl', ['$scope', "$auth", "$location", '$http', 'SocialService', function($scope, $auth, $location, $http, SocialService){

  $scope.message = "Welcome to the Home Landing Page";
  $scope.tweets = [];
  $scope.tweetData = [];

  $scope.getTweets = function () {
    SocialService.resource.query(function(resp) {
      $scope.tweets = resp;
      for (var i = 0; i < $scope.tweets.length; i++) {
        SocialService.addInfo($scope.tweets[i]);
      }
      console.log($scope.tweets);
    });
  };

  $scope.getInfo = function () {
    console.log($scope.tweets);
  };

  $scope.logout = function () {
    $auth.signOut().then(function(resp) {
      // handle success response
      console.log(resp);
      // hide log in menu and show profile menu
      $scope.isLoggedIn = false;
      // redirect back to root when logout is succesfull
      $location.path('/');
    }).catch(function(resp) {
      // handle error response
      console.log(resp);
    });
  };

}]);