app.controller('HeaderCtrl', ['$scope', "$auth", "$location", "UserService", function($scope, $auth, $location, UserService){

  $scope.user = UserService.user;

  $scope.login = function () {
    $auth.submitLogin($scope.loginForm).then(function(resp) {
      // handle success response
      console.log(resp);
      // redirect to home when registration succesfull
      $location.path('/home');
      }).
    catch(function(resp) {
      // handle error response
      console.log(resp);
    });
  };

  $scope.logout = function () {
    $auth.signOut().then(function(resp) {
      // handle success response
      console.log(resp);
      // hide log in menu and show profile menu
      $location.path('/');
    }).catch(function(resp) {
      // handle error response
      console.log(resp);
    });
  };


}]);