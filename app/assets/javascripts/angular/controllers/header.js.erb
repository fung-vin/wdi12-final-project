app.controller('HeaderCtrl', ['$scope', "$auth", "$state", "UserService", function($scope, $auth, $state, UserService){

  $scope.user = UserService.user;

  $scope.login = function () {
    $auth.submitLogin($scope.loginForm).then(function(resp) {
      // handle success response
      console.log(resp);
      // redirect to home when registration succesfull
      $state.path('header.home');
      }).
    catch(function(resp) {
      // handle error response
      console.log(resp);
    });
  };

  $scope.logout = function () {
    $auth.signOut().then(function(resp) {
      // handle success response
      console.log(resp);
      // hide log in menu and show profile menu
      $state.path('header.index');
    }).catch(function(resp) {
      // handle error response
      console.log(resp);
    });
  };


}]);