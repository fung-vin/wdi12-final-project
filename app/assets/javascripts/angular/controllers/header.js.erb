app.controller('HeaderCtrl', ['$scope', "$auth", "$location", function($scope, $auth, $location){

  $scope.message = "Welcome to Your Header";

  $scope.isLoggedIn = false;

  $scope.login = function () {
    $auth.submitLogin($scope.loginForm).then(function(resp) {
      // handle success response
      console.log(resp);
      // hide log in menu and show profile menu
      $scope.isLoggedIn = true;
      // redirect to home when registration succesfull
      $location.path('/home');
      }).
    catch(function(resp) {
      // handle error response
      console.log(resp);
    });
  };

  $scope.logout = function () {
    $auth.signOut().then(function(resp) {
      // handle success response
      console.log(resp);
      // hide log in menu and show profile menu
      $scope.isLoggedIn = false;
      // redirect back to root when logout is succesfull
      $location.path('/');
    }).catch(function(resp) {
      // handle error response
      console.log(resp);
    });
  };

}]);